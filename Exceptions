package com.bank.phg.domain.exception;

import lombok.experimental.StandardException;

/**
 * Indicates a transient infrastructure failure.
 * Safe to retry (Kafka, MQ, network, downstream).
 */
@StandardException
public class InfrastructureRetryableException extends RuntimeException {
}

/**
 * Indicates a non-recoverable business rule violation.
 * Message should be acknowledged and dropped.
 */
@StandardException
public class BusinessFatalException extends RuntimeException {
}

/**
 * Indicates invalid or unmappable input data.
 * Non-retryable.
 */
@StandardException
public class MappingException extends RuntimeException {
}
